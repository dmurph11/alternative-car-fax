{
	"manifest_version": 2,

	"name": "SYF.EX",
	"description": "Making Extensions Great Again!",
	"version": "1.1",
	"author":"Team Mega (Murphy, Oldhammer, Ecsedy, Wild Bill, Gregg)",

	"background": {
		"scripts": ["popup.js"],
		"persistent": true
	},

	"permissions": [
        "tabs",
        "http://*/",
        "https://*/",
				"declarativeContent"
    ],
	"browser_action": {
		"default_icon": "syfbars_16.png",
		"default_popup": "popup.html"
	},
	"icons" : {
    "32" : "syfbars_32.png",
    "64" : "syfbars_64.png",
		"128" : "syfbars_128.png"
  }
}
